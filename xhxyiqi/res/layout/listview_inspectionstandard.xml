<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="0dp" >

    <View style="@style/list_vertical_layout" />

    <TextView
        android:id="@+id/txtInspectionStandard"
        android:layout_width="633dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:padding="10dp"
        android:text="检查标准"
        android:textColor="#000000" 
        android:textSize="16dp" />

    <View style="@style/list_vertical_layout" />

    <Spinner
        android:id="@+id/cboInspectionResult"
        style="@style/SpinnerStyle"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="3dp"
        android:focusable="false"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#000000"
        android:textSize="16dp"
        android:visibility="gone" />

    <RadioGroup
        android:id="@+id/rdogCheckOptions"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="10dp" 
        android:paddingRight="10dp" >

        <RadioButton
            android:id="@+id/rdo01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="是" />

        <RadioButton
            android:id="@+id/rdo02"
             android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="否" />

        <RadioButton
            android:id="@+id/rdo03"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不涉及" />
    </RadioGroup>

    <View style="@style/list_vertical_layout" />

        <com.xhx.gacfca.pad.utility.ListViewButton
            android:id="@+id/btnAddImg"
            style="@style/ButtonStyle"
            android:layout_width="100dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="3dp"
            android:focusable="false"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/Photo"
            android:textColor="#000000"
            android:textSize="16dp" />

        <com.xhx.gacfca.pad.utility.ListViewButton
            android:id="@+id/btnSelectImg"
            style="@style/ButtonStyle"
            android:layout_width="100dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="3dp"
            android:focusable="false"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/Select"
            android:textColor="#000000"
            android:textSize="16dp" />

        <com.xhx.gacfca.pad.utility.ListViewButton
            android:id="@+id/btnLookImg"
            style="@style/ButtonStyle"
            android:layout_width="100dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="3dp"
            android:focusable="false"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/Lookup"
            android:textColor="#000000"
            android:textSize="16dp" />

    <View style="@style/list_vertical_layout" />

</LinearLayout>